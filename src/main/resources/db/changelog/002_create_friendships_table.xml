<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="002-create-friendships-table" author="bac">

        <createTable tableName="friendships">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_a_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="user_b_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="requester_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="message" type="VARCHAR(300)"/>

            <column name="created_at" type="DATETIME"
                    defaultValueComputed="CURRENT_TIMESTAMP"/>

            <column name="updated_at" type="DATETIME"
                    defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- mỗi cặp user chỉ tồn tại 1 bản ghi -->
        <addUniqueConstraint
                tableName="friendships"
                columnNames="user_a_id,user_b_id"
                constraintName="uk_friendships_user_pair"/>
    </changeSet>

    <!-- ================= FOREIGN KEY ================= -->
    <changeSet id="002-add-fk-friendships" author="bac">

        <addForeignKeyConstraint
                baseTableName="friendships"
                baseColumnNames="user_a_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_friendships_user_a"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="friendships"
                baseColumnNames="user_b_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_friendships_user_b"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="friendships"
                baseColumnNames="requester_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_friendships_requester"
                onDelete="CASCADE"/>

    </changeSet>

</databaseChangeLog>
