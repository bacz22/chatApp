<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="003-create-table-notifications" author="bac">

        <createTable tableName="notifications">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="sender_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="friendship_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="is_read" type="BOOLEAN" defaultValueBoolean="false"/>

            <column name="created_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- FK: notifications.user_id -> users.id -->
        <addForeignKeyConstraint
                constraintName="fk_notifications_user"
                baseTableName="notifications"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <!-- FK: notifications.sender_id -> users.id -->
        <addForeignKeyConstraint
                constraintName="fk_notifications_sender"
                baseTableName="notifications"
                baseColumnNames="sender_id"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <!-- FK: notifications.friendship_id -> friendships.id -->
        <addForeignKeyConstraint
                constraintName="fk_notifications_friendship"
                baseTableName="notifications"
                baseColumnNames="friendship_id"
                referencedTableName="friendships"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

    </changeSet>

</databaseChangeLog>
